<%= form_with(model: student, local: true) do |form| %>
    <% if student.errors.any? %>
      <div>
        <h2><%= pluralize(student.errors.count, "error") %> prevented this student from being saved:</h2>
        <ul>
          <% student.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
     <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div class="field">
      <%= form.label :student_number %>
      <%= form.text_field :student_number, placeholder: "X1234567" %>
    </div>

    <div class="field">
      <%= form.label :course %>
      <%= form.select :course, ['Computer Science', 'Information Systems', 'Software Engineering', 'Cybersecurity'], prompt: "Select a Course" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>
  